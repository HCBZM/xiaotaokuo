/* pages/cart/cart.wxss */
.address-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 18px;
  line-height: 40px;
  font-size: 14px;
}
.address-wrapper .location {
  color: #aaa;
}
.null-cart {
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: center;
  background-color: #f1f1f1;
  padding: 30px 0 20px;
}
.null-cart .img {
  width: 50%;
}
.null-cart .text {
  font-size: 14px;
  margin: 1em auto;
  color: #999;
} 
.null-cart .toIndex {
  font-size: 14px;
  padding: .6em 2.2em;
  color: #fff;
  background: linear-gradient(to right, #ff335e, #ff0036);
  border-radius: 3em;
}
.products-wrapper {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 8px;
  background-color: #f1f1f1;
  margin-bottom: 55px;
}
.products-wrapper .product-card {
  width: calc(50% - 5px);
  margin-bottom: 10px;
  background-color: #fff;
  border-radius: 5px;
  overflow: hidden;
}
.myProducts-wrapper {
  padding: 8px;
  background-color: #f1f1f1;
}
.myProducts-wrapper .shop-warp .head-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 12px 12px 0;
}
.choice-btn {
  position: relative;
  flex-shrink: 0;
  width: 20px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  border-radius: 100%;
  border: 1px solid #ccc;
}
.choice-btn.on {
  border-color: #ff0036;
}
.choice-btn .iconfont {
  position: absolute;
  visibility: hidden;
  color: #ff0036;
  font-size: 24px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.choice-btn.on .iconfont {
  visibility: visible;
}
.shop-warp .head-wrapper .left {
  display: flex;
  align-items: center;
}
.shop-warp .head-wrapper .title {
  font-size: 16px;
  font-weight: bold;
  margin-left: 10px;
}
.shop-warp .head-wrapper .right {
  display: flex;
  align-items: center;
  font-size: 12px;
  font-weight: bold;
}
.head-wrapper .right .tip {
  color: #999;
}
.head-wrapper .right .sep {
  width: 0px;
  height: 16px;
  border-right: solid #ccc;
  margin: 0 .6em;
}
.head-wrapper .right .coupon {
  color: #ff0036;
}
.myProducts-wrapper .cart-product {
  margin: 12px 0;
  background-color: #fff;
  border-radius: 5px;
  overflow: hidden;
}
.guess {
  text-align: center;
  line-height: 38px;
  background-color: #f1f1f1;
  letter-spacing: 1em;
  font-size: 14px;
  color: #999;
  padding-bottom: 10px;
  padding-left: 1em;
}
.bottom-bar {
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: calc(100% - 40px);
  padding: 5px 20px;
  background-color: #fff;
  white-space: nowrap;
}
.bottom-bar .left {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #000;
}
.bottom-bar .left .choice-btn {
  margin-right: 5px;
}
.bottom-bar .left .total {
  margin: 0 8px;
}
.bottom-bar .left .price {
  font-size: 16px;
  font-weight: bold;
}
.bottom-bar .toPay {
  position: relative;
  z-index: 3;
  width: 100px;
  height: 40px;
  line-height: 40px;
  border-radius: 40px;
  background-color: #ff0036;
  color: #fff;
  font-size: 14px;
  text-align: center;
}
.bottom-bar .buttons {
  display: flex;
}
.bottom-bar .cell {
  width: 100px;
  height: 40px;
  line-height: 40px;
  background-color: #ff0036;
  color: #fff;
  border-radius: 40px;
  text-align: center;
  font-size: 14px;
}
.bottom-bar .collect {
  background-color: #DAA520;
  margin-right: 8px;
}